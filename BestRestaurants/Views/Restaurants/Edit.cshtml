@using BestRestaurants.Models;

<h1>Edit Restaurant</h1>
<form action="/cuisines/@Model["type"].GetId()/restaurants/@Model["restaurant"].GetId()" method="post">
  <label for="name">Name</label>
  <input id="name" name="name" type="text" value="@Model["restaurant"].GetName()">
  <label for="address">Address</label>
  <input id="address" name="address" type="text" value="@Model["restaurant"].GetAddress()">
  <button type="submit">Submit</button>
</form>
