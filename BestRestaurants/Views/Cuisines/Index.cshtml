@using BestRestaurants.Models;

<h1>CUISINES INDEX</h1>
@if(Model.Count==0)
{
  <p>No cuisines available</p>
}
@if(Model.Count!=0)
{
  @foreach(Cuisine cuisine in Model)
  {
    <p><a href="/cuisines/@cuisine.GetId()">@cuisine.GetCuisineType()</a></p>
  }
}

  <p><a href="/cuisines/new">Add new type of cuisine</a></p>
